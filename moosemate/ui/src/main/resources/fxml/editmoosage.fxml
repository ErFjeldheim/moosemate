<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="500.0" spacing="15" style="-fx-background-color: #f3efe8;" stylesheets="@../css/common.css, @../css/editmoosage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditMoosageController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <!-- Header -->
    <Label styleClass="dialog-title" text="Edit your Moosage ...">
        <font>
            <Font name="Chewy" size="24" />
        </font>
    </Label>
    
    <!-- Text area for editing -->
    <TextArea fx:id="contentTextArea" prefHeight="150.0" wrapText="true">
        <font>
            <Font name="Poppins Medium" size="13" />
        </font>
    </TextArea>
    
    <!-- Character counter -->
    <Label fx:id="charCountLabel" styleClass="char-count-label" text="0/280">
        <font>
            <Font name="Poppins Medium" size="11.0" />
        </font>
    </Label>
    
    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="cancelButton" onAction="#handleCancel" prefWidth="100" styleClass="cancel-button" text="Cancel">
            <font>
                <Font name="Poppins Medium" size="13" />
            </font>
        </Button>
        <Button fx:id="saveButton" onAction="#handleSave" prefWidth="100" styleClass="saveButton" text="Save">
            <font>
                <Font name="Poppins Medium" size="13" />
            </font>
        </Button>
    </HBox>
</VBox>
