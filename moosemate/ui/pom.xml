<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>moosemate</groupId>
        <artifactId>moosemate</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>ui</artifactId>
    <packaging>jar</packaging>

    <name>ui</name>
    <description>JavaFX UI layer</description>

    <dependencies>
        <!-- Core module dependency -->
        <dependency>
            <groupId>moosemate</groupId>
            <artifactId>core</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- Persistence module dependency -->
        <dependency>
            <groupId>moosemate</groupId>
            <artifactId>persistence</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- REST module dependency -->
        <dependency>
            <groupId>moosemate</groupId>
            <artifactId>rest</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- JavaFX Controls -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
        </dependency>
        
        <!-- JavaFX FXML -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
        </dependency>
        
        <!-- Jackson for JSON processing -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        
        <!-- JUnit 5 for testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- JUnit 5 API -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- TestFX Core for JavaFX UI Testing -->
        <dependency>
            <groupId>org.testfx</groupId>
            <artifactId>testfx-core</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- TestFX JUnit 5 integration -->
        <dependency>
            <groupId>org.testfx</groupId>
            <artifactId>testfx-junit5</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- TestFX Robot for UI automation -->
        <!-- Monocle dependency removed due to JavaFX 21 compatibility issues -->
        <!-- TestFX will use system robot instead -->
        
        <!-- Mockito for mocking -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- Mockito JUnit Jupiter extension -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- JaCoCo Plugin Configuration for UI module -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>check</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <!-- Skip TestFX check on macOS as it is not supported  -->
                            <skip>${skip.ui.jacoco.check}</skip>
                            <rules>
                                <rule>
                                    <element>BUNDLE</element>
                                    <limits>
                                        <limit>
                                            <counter>INSTRUCTION</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.00</minimum>
                                        </limit>
                                        <limit>
                                            <counter>BRANCH</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.00</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Maven Compiler Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <source>21</source>
                    <target>21</target>
                    <release>21</release>
                </configuration>
            </plugin>
            
            <!-- Maven Surefire Plugin for running tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.3</version>
                <configuration>
                    <!-- Force sequential execution for TestFX tests to avoid JavaFX thread conflicts -->
                    <parallel>none</parallel>
                    <forkCount>1</forkCount>
                    <reuseForks>false</reuseForks>
                    <!-- Explicitly include all test patterns including TestFX -->
                    <includes>
                        <include>**/*Test.java</include>
                        <include>**/*Tests.java</include>
                        <include>**/*TestCase.java</include>
                        <include>**/*TestFX.java</include>
                    </includes>
                    <systemPropertyVariables>
                        <!-- System properties for TestFX execution without Monocle on Windows -->
                        <java.awt.headless>false</java.awt.headless>
                        <testfx.robot>glass</testfx.robot>
                        <testfx.headless>false</testfx.headless>
                        <prism.order>sw</prism.order>
                        <prism.text>t2k</prism.text>
                    </systemPropertyVariables>
                    <!-- CRITICAL: @{argLine} allows JaCoCo to inject its agent parameters -->
                    <argLine>@{argLine} --add-exports javafx.graphics/com.sun.javafx.application=ALL-UNNAMED --add-exports javafx.graphics/com.sun.glass.ui=ALL-UNNAMED --add-opens javafx.graphics/javafx.stage=ALL-UNNAMED</argLine>
                </configuration>
            </plugin>
            
            <!-- JavaFX Maven Plugin -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>${javafx.maven.plugin.version}</version>
                <configuration>
                    <mainClass>app.App</mainClass>
                </configuration>
            </plugin>
            
            <!-- Maven Antrun Plugin to display coverage summary in terminal after mvn test -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
    
                    <execution>
                        <id>coverage-summary</id>
                        <phase>test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="" level="info" />
                                <echo message="========================================" level="info" />
                                <echo message="  Test Coverage Report" level="info" />
                                <echo message="========================================" level="info" />
                                <echo message="" level="info" />
                                <echo message="Coverage report includes: core, persistence and rest" level="info" />
                                <echo message="Click link below (cmd/ctrl + click) to open report:" level="info" />
                                <echo message="" level="info" />
                                <echo message="macOS:   file://${maven.multiModuleProjectDirectory}/ui/target/site/jacoco-aggregate/index.html" level="info" />
                                <echo message="Windows: file:///${maven.multiModuleProjectDirectory}/ui/target/site/jacoco-aggregate/index.html" level="info" />
                                <echo message="" level="info" />
                                <echo message="For UI-specific coverage report:" level="info" />
                                <echo message="  file:///${maven.multiModuleProjectDirectory}/ui/target/site/jacoco/index.html" level="info" />
                                <echo message="" level="info" />
                                <echo message="========================================" level="info" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Maven Exec Plugin for running with proper module path -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>app.App</mainClass>
                    <commandlineArgs>--module-path ${javafx.runtime.path} --add-modules javafx.controls,javafx.fxml</commandlineArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>